@model List<ResultCategoryDto>
@{
    ViewData["Title"] = "Kategoriler";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";

}
<table class="table table-bordered table-hover custom-table">
    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>Durum</th>
        <th>İşlemler</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.CategoryID</th>
            <td>@item.CategoryName</td>
            <td>@item.Status</td>
            <td>
                <a asp-action="DeleteCategory" asp-route-id="@item.CategoryID" class="btn btn-outline-danger"><i class="typcn typcn-trash"></i> Sil</a>
                <a asp-action="UpdateCategory" asp-route-id="@item.CategoryID" class="btn btn-outline-info"><i class="typcn typcn-edit"></i> Güncelle</a>
            </td>
        </tr>
    }
</table>
<br />
<a asp-action="CreateCategory" class="btn btn-outline-primary">Yeni Kategori Oluştur</a>


<style>
    .custom-table {
        border-collapse: collapse; 
        width: 100%;
    }

        .custom-table th, .custom-table td {
            border: 1px solid #dee2e6; 
            padding: 8px; 
            text-align: left; 
        }

        .custom-table th {
            background-color: #f8f9fa; 
            font-weight: bold; 
        }

        .custom-table td {
            background-color: #ffffff;
        }

        .custom-table tr:nth-child(even) {
            background-color: #f2f2f2; 
        }

        .custom-table td img {
            max-width: 100px; 
            height: auto; 
        }
</style>

